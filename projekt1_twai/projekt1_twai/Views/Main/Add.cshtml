@model projekt1_twai.Models.Car
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dodawanie</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <style>
        .btn a {
            color: white;
            text-decoration: none
        }

        body {
            background-color: #F1F1F1;
        }

        .panel-body
        {
            margin:20px
        }
        h4{
            margin:20px
        }
        
    </style>
</head>
<body>
    <nav class="navbar navbar-dark bg-primary">
        <a class="navbar-brand" href="~/Main/MainPage">Katalog samochodów</a>
        <a class="nav-item nav-link bg-danger" href="~/Main/Wyloguj">Wyloguj</a>
    </nav>

    
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>Dodaj</h4></div>
        <div class="panel-body">



            @{
                List<SelectListItem> listItems = new List<SelectListItem>();
                listItems.Add(new SelectListItem
                {
                    Text = "PB+LPG",
                    Value = "PB+LPG"
                });
                listItems.Add(new SelectListItem
                {
                    Text = "PB",
                    Value = "PB",

                });
                listItems.Add(new SelectListItem
                {
                    Text = "Diesel",
                    Value = "Diesel"
                });

                listItems.Add(new SelectListItem
                {
                    Text = "Inny",
                    Value = "Inny"
                });
            }

            @{
                List<SelectListItem> listItems1 = new List<SelectListItem>();
                listItems1.Add(new SelectListItem
                {
                    Text = "Czarny",
                    Value = "Czarny"
                });
                listItems1.Add(new SelectListItem
                {
                    Text = "Biały",
                    Value = "Biały",

                });
                listItems1.Add(new SelectListItem
                {
                    Text = "Czerwony",
                    Value = "Czerowny"
                });

                listItems1.Add(new SelectListItem
                {
                    Text = "Zółty",
                    Value = "Zółty"
                });

                listItems1.Add(new SelectListItem
                {
                    Text = "Niebieski",
                    Value = "Niebieski"
                });
                listItems1.Add(new SelectListItem
                {
                    Text = "Srebrny",
                    Value = "Srebrny"
                });

                listItems1.Add(new SelectListItem
                {
                    Text = "inny",
                    Value = "inny"
                });
            }








            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div class="form-group">
                    <label>Marka:</label>
                    @Html.TextBoxFor(x => x.Marka, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Model:</label>
                    @Html.TextBoxFor(x => x.Model, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Rok produkcji:</label>
                    @Html.TextBoxFor(x => x.Rok, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Pojemność silnika:</label>
                    @Html.TextBoxFor(x => x.Poj, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Rodzaj paliwa:</label>
                    @Html.DropDownListFor(x => x.Paliwo, listItems, "-- Wybierz --", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Kolor karoserii:</label>
                    @Html.DropDownListFor(x => x.kolor, listItems1, "-- Wybierz --", new { @class = "form-control" })

                </div>
                <button type="submit" class="btn btn-primary">Dodaj</button>
                <div class="btn btn-danger">
                    @Html.ActionLink("Powrót", "MainPage")
                </div>


            }
        </div>
    </div>



</body>
</html>