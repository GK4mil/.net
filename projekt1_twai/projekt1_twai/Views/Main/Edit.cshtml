@model projekt1_twai.Models.Car
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edycja</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <style>
        .btn a {
            color: white;
            text-decoration: none
        }

        
        form
        {
            margin:20px
        }
        h4 {
            margin: 20px
        }
        select {
            border-radius: .25rem;

            width: 100%
        }
            select:active {
                border: 1px solid #ced4da;
                
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-dark bg-primary">
        <a class="navbar-brand" href="~/Main/MainPage">Katalog samochodów</a>
        <a class="nav-item nav-link bg-danger" href="~/Main/Wyloguj">Wyloguj</a>
    </nav>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>Edytuj</h4></div>
        @Html.ValidationSummary()
        <div class="panel-body">
            <form action="/Main/Edit" method="post">
                <div class="validation-summary-valid" data-valmsg-summary="true">
                    <ul>
                        <li style="display:none"></li>
                    </ul>
                </div>            <div class="form-group">
                    <label>Marka:</label>
                    <input class="form-control" data-val="true" required data-val-required="Proszę podać Markę" id="Marka" value="@Model.Marka" name="Marka" type="text" />
                </div>
                <div class="form-group">
                    <label>Model:</label>
                    <input class="form-control" data-val="true" required data-val-required="Proszę podać model." value="@Model.Model" id="Model" name="Model" type="text" />
                </div>
                <div class="form-group">
                    <label>Rok produkcji:</label>
                    <input value="@Model.Rok " class="form-control" required data-val="true" data-val-number="Pole Rok produkcji musi być liczbą." data-val-range="Rok nie może być wartością ujemna" data-val-range-max="3000" data-val-range-min="0" data-val-required="Proszę podać rok produkcji." id="Rok" name="Rok" type="text" />
                </div>
                <div class="form-group">
                    <label>Pojemność silnika:</label>
                    <input value="@Model.Poj " class="form-control" required data-val="true" data-val-number="Pole Pojemność silnika musi być liczbą." data-val-range="Pojemność silnika nie może być wartością ujemna" data-val-range-max="999999" data-val-range-min="0" data-val-required="Proszę podać pojemność silnika." id="Poj" name="Poj" type="text" />
                </div>
                <div class="form-group">
                    <label>Rodzaj paliwa:</label><br />
                    <select name="Paliwo">
                        <option value="PB+LPG">PB+LPG</option>
                        <option value="PB">PB</option>
                        <option value="Diesel">Diesel</option>
                        <option value="Inny">Inny</option>
                    </select>
                </div>            <div class="form-group">
                    <label>Kolor karoserii:</label><br/>
                    <select name="kolor">
                        <option value="Czarny">Czarny</option>
                        <option value="Biały">Biały</option>
                        <option value="Czerwony">Czerwony</option>
                        <option value="Zółty">Zółty</option>
                        <option value="Niebieski">Niebieski</option>
                        <option value="Srebrny">Srebrny</option>
                        <option value="inny">inny</option>

                    </select>   </div>
                <button type="submit" class="btn btn-primary">Edytuj</button>
                <div class="btn btn-danger">
                    @Html.ActionLink("Powrót", "MainPage")
                </div>
            </form>
            
        </div>
    </div>

    
</body>
</html>